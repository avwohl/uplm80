/* Test for DJNZ/JR relative jump out of range */
/* This test creates a large loop body that exceeds the -128 byte range */

TEST: DO;
    DECLARE I BYTE;
    DECLARE (A1, A2, A3, A4, A5, A6, A7, A8, A9, A10) ADDRESS;
    DECLARE (A11, A12, A13, A14, A15, A16, A17, A18, A19, A20) ADDRESS;
    DECLARE RESULT ADDRESS;

    /* DO loop with large body - each assignment generates several bytes */
    /* Need ~150 bytes to exceed DJNZ range */
    DO I = 1 TO 10;
        A1 = A1 + 1;
        A2 = A2 + 2;
        A3 = A3 + 3;
        A4 = A4 + 4;
        A5 = A5 + 5;
        A6 = A6 + 6;
        A7 = A7 + 7;
        A8 = A8 + 8;
        A9 = A9 + 9;
        A10 = A10 + 10;
        A11 = A11 + 11;
        A12 = A12 + 12;
        A13 = A13 + 13;
        A14 = A14 + 14;
        A15 = A15 + 15;
        A16 = A16 + 16;
        A17 = A17 + 17;
        A18 = A18 + 18;
        A19 = A19 + 19;
        A20 = A20 + 20;
    END;

    RESULT = A1 + A2 + A3 + A4 + A5;

END TEST;
